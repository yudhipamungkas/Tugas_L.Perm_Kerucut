<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yudhipamungkas.luas_permukaan_kerucut.Hitung_LPerm_Kerucut">
    <ImageView
        android:src="@drawable/kerucut"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:text="Hitung Luas Permukaan Kerucut"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:textColor="#000000" />
    <EditText
        android:id="@+id/jari"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Jari-Jari (r)"/>
    <EditText
        android:id="@+id/pelukis"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Garis Pelukis (s)"/>
    <Button
        android:id="@+id/button"
        android:text="Ayo Hitung!"
        android:onClick="klik"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/luaspermukaan"
        android:text="Luas Permukaan ="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
</LinearLayout>


